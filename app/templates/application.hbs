<div class="">
  <div class="menu">
    {{#link-to 'index'}}
      <h1 class="left">
        <em>MailBox</em>
      </h1>
      <h1 class="right">
          {{weather-comp}}
      </h1>
    {{/link-to}}

  </div>
  <div class="body">

    <aside>
      <ul>

        {{#each model as |mailbox|}}
          <li>
            {{#link-to "mailbox" mailbox current-when="mailbox"}}
              <span class="count">
                {{mailbox.messages.length}}
              </span>
              {{mailbox.name}}
            {{/link-to}}
          </li>
        {{/each}}
      </ul>
    </aside>

    <section class="main">
      {{outlet}}
    </section>


  </div>
</div>
